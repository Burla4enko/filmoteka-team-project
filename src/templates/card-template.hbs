{{#each this}}
  <li class='films__item'>
    <div class='films__img'>
      <img
        src='https://image.tmdb.org/t/p/w342{{poster_path}}'
        alt='Film {{title}} poster'
        loading='lazy'
      />
    </div>
    <div class='films__description'>
      <p class='films__title'>{{title}}</p>
      <p class='films__meta'>
        <span class="films__genre">
        {{genre_ids}}
        </span>
        <span class='films__meta-separator'>
        </span>
        <span class="films__date">{{release_date}}</span>
        <span class='films__rating'>{{vote_average}}</span>
      </p>
    </div>
  </li>
{{/each}}