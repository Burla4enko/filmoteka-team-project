{{#each this}}
  <div class='modal'>
    <div class='movie-modal'>
      <div class='modal-trailer'>
        <button
          type='button'
          class='modal__close'
          data-action='modal-close-trailer'
        >
          <svg class='modal__icon' width='30' height='30'>
            <use href='symbol-defs.svg#icon-close'></use>
          </svg>
        </button>
        <div class='modal__iframe-container'>
          <iframe
            width='882'
            height='440'
            src='https://www.youtube.com/embed/{{key}}'
            title='YouTube video player'
            frameborder='0'
            allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture'
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </div>

{{/each}}